{
  "manifest_version": 2,
  "name": "Table of contents sidebar",
  "version": "1.0.12",
  "description": "An outline tool, Automatically creates table of contents in the sidebar that can be clicked through, for easy document navigation.",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "content_scripts": [
    {
      "css": [
        "table-of-contents-sidebar.css"
      ],
      "js": [
        "app.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "images/icon/ic_enable.png",
    "default_title": "Table of contents sidebar"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "images/*",
    "table-of-contents-sidebar.css"
  ],
  "icons": {
    "128": "images/icon/ic_enable.png"
  }
}