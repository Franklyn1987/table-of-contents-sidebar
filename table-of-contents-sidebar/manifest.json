{
  "manifest_version": 2,
  "name": "Table of contents sidebar",
  "version": "1.0.1",
  "description": "An outline tool, Automatically creates table of contents in the sidebar that can be clicked through, for easy document navigation.",
  "content_scripts": [
    {
      "css": [
        "table-of-contents-sidebar.css"
      ],
      "js": [
        "app.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "images/icon/icon_blue_128x128.png",
    "default_title": "Table of contents sidebar"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "web_accessible_resources": [
    "images/icon/icon_blue_128x128.png",
    "images/close.png",
    "images/hover.png",
    "images/left.png",
    "images/right.png",
    "images/bug.png",
    "table-of-contents-sidebar.css"
  ],
  "icons": {
    "128": "images/icon/icon_blue_128x128.png"
  }
}